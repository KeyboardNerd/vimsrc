filetype plugin indent on
syntax on
set number
set complete+=kspell
set colorcolumn=80
set cursorline
set completeopt=menuone,longest
set softtabstop=2
set tabstop=2
set shiftwidth=2
set expandtab
set wildmenu
set shortmess+=c
set showmatch
set showcmd
set showmode
set is
set hls
set mouse=a
set statusline+=%F
set laststatus=2
set scrolloff=3
hi Search ctermbg=LightYellow
hi Search ctermfg=Red
hi Cursor guibg=NONE guifg=NONE gui=reverse
